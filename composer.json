{
    "name": "allansun/openapi-runtime",
    "description": "Runtime library to be used with other SDK generated from OpenAPI docs",
    "license": "MIT",
    "keywords": [
        "openapi",
        "swagger",
        "kubernetes",
        "docker",
        "runtime"
    ],
    "authors": [
        {
            "name": "Allan Sun",
            "email": "allan.sun@bricre.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "php-http/discovery": "^1.14",
        "php-http/message-factory": "^1.0",
        "phpdocumentor/reflection-docblock": "^5.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "psr/log": "1.*|2.*|3.*",
        "symfony/property-info": "^4|^5"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.4",
        "php-http/httplug-bundle": "^1.25",
        "phpspec/prophecy": "^1.12",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "~9",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/http-client": "^v5|^v6",
        "vimeo/psalm": "^4.15"
    },
    "suggest": {
        "monolog/monolog": "^2",
        "symfony/http-client": "^v5.2.6",
        "guzzlehttp/guzzle": "^7"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "OpenAPI\\Runtime\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenAPI\\Runtime\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --stats",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "prefer-stable": true
}
